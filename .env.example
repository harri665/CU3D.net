# CU3D Application Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_DOMAIN=localhost
REACT_APP_API_URL=http://localhost:3001

# Backend Configuration
BACKEND_PORT=3001
BACKEND_DOMAIN=localhost

# MongoDB Configuration
MONGO_VERSION=4.4
MONGO_PORT=27017
MONGO_USERNAME=root
MONGO_PASSWORD=example
MONGO_DATABASE=mst
MONGODB_URI=mongodb://mongodb0.example.com:27017

# Discord Bot Configuration (Required for Discord features)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# Nginx Configuration (if using)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Traefik Labels (for reverse proxy)
# Update domains for production deployment
# FRONTEND_DOMAIN=your-frontend-domain.com
# BACKEND_DOMAIN=your-api-domain.com